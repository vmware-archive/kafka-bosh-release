#!/bin/bash
set -e -x

export JAVA_HOME=/var/vcap/packages/jdk
export PATH=$JAVA_HOME/bin:$PATH

export ZOO_LOG_DIR=/var/vcap/sys/logs/zookeeper_server

case $1 in

  start)
    mkdir -p /var/vcap/store/zookeeper_server
    mkdir -p /var/vcap/sys/log/zookeeper_server
    mkdir -p /var/vcap/sys/run/zookeeper_server
    chown -H vcap:vcap /var/vcap/store/zookeeper_server
    chown -H vcap:vcap /var/vcap/sys/log/zookeeper_server
    chown -H vcap:vcap /var/vcap/sys/run/zookeeper_server

    echo <%= index %> > /var/vcap/store/zookeeper_server/myid
    chown vcap:vcap /var/vcap/store/zookeeper_server/myid

    exec chpst -u vcap:vcap /var/vcap/packages/kafka/kafka_2.11-0.10.1.0/bin/zookeeper-server-start.sh \
      /var/vcap/jobs/zookeeper_server/config/zookeeper.properties \
      1>> /var/vcap/sys/log/zookeeper_server/zookeeper_ctl.stdout.log \
      2>> /var/vcap/sys/log/zookeeper_server/zookeeper_ctl.stderr.log &
    ;;

  stop)
    exec chpst -u vcap:vcap /var/vcap/packages/kafka/kafka_2.11-0.10.1.0/bin/zookeeper-server-stop.sh
    ;;
  *)
    echo "Usage: $0 {start|stop}"
    ;;

esac
exit 0